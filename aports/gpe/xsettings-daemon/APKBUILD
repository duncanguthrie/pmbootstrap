# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=xsettings-daemon
pkgver=0.0.2
pkgrel=0
pkgdesc="Small gconf to xsettings bridge"
url="https://git.yoctoproject.org/cgit/cgit.cgi/xsettings-daemon/"
arch="all"
license="GPL-2.0-only"
depends="gconf gsettings-desktop-schemas libxsettings libxsettings-client"
makedepends="autoconf automake libtool gconf-dev gsettings-desktop-schemas-dev libxsettings-dev libxsettings-client-dev"
install=""
subpackages=""
source="https://git.yoctoproject.org/cgit/cgit.cgi/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.gz
	external-xsettings.patch"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"

build() {
	cd "$builddir"
	./autogen.sh
	make prefix="/usr"
}

package() {
	cd "$builddir"
	make prefix="/usr" DESTDIR="$pkgdir" install
}

