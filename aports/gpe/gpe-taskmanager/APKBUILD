pkgname=gpe-taskmanager
pkgver=0.20
pkgrel=0
pkgdesc="Screenshot application for the GPE Palmtop Environment"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0"
depends="gpe-icons gdk-pixbuf glib libgpelaunch libgpewidget gtk+2.0 libx11"
makedepends="intltool libgpewidget-dev libgpelaunch-dev"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
	01-desktop-validity.patch  
	02-german-utf8.patch  
	03-Makefile.patch  
	04-use-pointer.patch"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
subpackages="$pkgname-lang"
build() {
	cd "$builddir"
	make PREFIX=/usr/
}
package() {
	cd "$builddir"
	make PREFIX=/usr/ DESTDIR="$pkgdir" install
}
