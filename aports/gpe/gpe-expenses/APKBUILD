# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=gpe-expenses
pkgver=0.1.9
pkgrel=0
pkgdesc="Expenses application for the GPE Palmtop Environment"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0 LGPL-2.0"
depends="atk cairo fontconfig freetype gdk-pixbuf glib libgpepimc libgpewidget gtk+2.0 pango popt qof"
makedepends="autoconf automake libintl libxslt libgpepimc-dev libgpewidget-dev qof-dev popt-dev gtk+2.0-dev doxygen"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
subpackages="$pkgname-doc $pkgname-dev"
prepare() {
	default_prepare
	update_config_sub
}
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="a1207a4c5908ab422a76a214b3912979cb6c37c8398c6ef66cbb957bf95248088c11837868d878742cf4463ae59a0b2a6013d603037ae2b348a811dd7d0da0e2  gpe-expenses_0.1.9.orig.tar.gz"
