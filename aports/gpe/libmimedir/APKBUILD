# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=libmimedir
pn=$pkgname-gnome
pkgver=0.4.2
pkgrel=0
pkgdesc="Library that implements MIME directory profiles"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="LGPL 2.0-or-later"
depends="glib"
makedepends="glib-dev gtk-doc gnome-common musl-dev"
subpackages="$pkgname-dev"
source="http://http.debian.net/debian/pool/main/libm/${pn}/${pn}_${pkgver}.orig.tar.gz
	01-config-sub.patch
	02-format-strings.patch
	03-ssize_t.patch"
builddir="${srcdir}/${pkgname}-${pkgver}"
options="!check"
build () {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make -j1
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
