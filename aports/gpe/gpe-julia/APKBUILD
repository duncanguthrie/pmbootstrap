pkgname=gpe-julia
pkgver=0.0.6
pkgrel=0
pkgdesc="Julia set manipulation game for GPE"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0"
depends="gpe-icons atk cairo fontconfig freetype gdk-pixbuf glib libgpewidget gtk+2.0 pango"
makedepends="glib-dev libgpewidget-dev gtk+2.0-dev"
source="$pkgname-$pkgver.tar::http://palmtop.org/gpe-archive/$pkgname-$pkgver.tar.gz
	01-no-gpe-render-h.patch"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
build() {
	cd "$builddir"
	make PREFIX=/usr/ all
}

package() {
	cd "$builddir"
	make PREFIX=/usr/ DESTDIR=$pkgdir install-program
}

