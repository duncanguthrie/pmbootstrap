# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=libgpepimc
pkgver=0.9
pkgrel=0
pkgdesc="Category management for GPE applications"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="LGPL 2.0-or-later"
depends="atk cairo fontconfig freetype gdk-pixbuf glib gtk+2.0 pango sqlite
	libgpewidget"
makedepends="glib-dev intltool sqlite-dev
	libgpewidget-dev"
subpackages="$pkgname-dev"
source="http://http.debian.net/debian/pool/main/libg/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
	01-config-sub.patch"
builddir="${srcdir}/${pkgname}-${pkgver}.orig"
options="!check"
build () {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make -j1
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
sha512sums="f148d994fbb818861ee0ad79a301454bff8ce8619415a6aab1e25eb48fca2f4cccc4f3f88d733c3c2173a66e94cde9b93c237af96c40d1188b733248d5c5d896  libgpepimc_0.9.orig.tar.gz
3b84e07eaacff2a86d47b731df583c914070a00c0ed43da8a18ff5551066086e385ddeecd92b8f7cb4dec2e5eca3f4904dbc74bb67136e6784bd4fcca8f2488b  01-config-sub.patch"
