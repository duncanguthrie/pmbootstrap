# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=gpe-clock
pkgver=0.27
pkgrel=0
pkgdesc="Configuration toolset for the GPE Palmtop Environment"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0 LGPL-2.0"
depends="gpe-announce gpe-icons atk cairo fontconfig freetype gdk-pixbuf glib libgpelaunch libgpeschedule libgpewidget gtk+2.0 pango libx11"
makedepends="libgpewidget-dev glib-dev gtk+2.0-dev libgpeschedule-dev libgpelaunch-dev"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
	desktop-validity.patch"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
subpackages="$pkgname-lang"

build() {
	cd "$builddir"
	make LDFLAGS="-lX11" PREFIX="/usr"
}
package() {
	cd "$builddir"
	make PREFIX="/usr" DESTDIR="$pkgdir" install
}
