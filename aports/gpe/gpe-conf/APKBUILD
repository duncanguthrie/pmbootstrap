# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=gpe-conf
pkgver=0.2.9
pkgrel=0
pkgdesc="Configuration toolset for the GPE Palmtop Environment"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0 LGPL-2.0"
depends="atk freetype fontconfig gdk-pixbuf glib gtk+2.0 pango libxrandr libx11
	libxsettings-client libgpewidget esound audiofile"
makedepends="intltool gtk+2.0-dev glib-dev libx11-dev libxrandr-dev 
	esound-dev libgpewidget-dev libxsettings-dev"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
	01-config-sub.patch
	02-desktop-validity.patch
	03-format-security.patch
	04-timeanddate.patch"
builddir="$srcdir/$pkgname-$pkgver"
options="!check suid"
subpackages="$pkgname-lang"

build () {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

