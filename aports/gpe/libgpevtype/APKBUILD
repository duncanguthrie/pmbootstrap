# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=libgpevtype
pkgver=0.50
pkgrel=6
pkgdesc="Data interchange library for GPE"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL 2.0-or-later"
depends="glib sqlite  
	libeventdb libmimedir libtododb"
makedepends="gtk-doc glib-dev sqlite-dev
	libeventdb-dev libmimedir-dev libgpewidget-dev libtododb-dev"
subpackages="$pkgname-dev"
source="http://http.debian.net/debian/pool/main/libg/${pkgname}/${pkgname}_${pkgver}.orig.tar.bz2
	01-config-sub.patch
	02-g_set_error_string_format.patch
	03-unresolved.patch"
builddir="${srcdir}/${pkgname}-${pkgver}"
options="!check"
build () {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
