# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=gpe-appmgr
pkgver=2.8
pkgrel=0
pkgdesc="Application manager/launcher for the GPE Palmtop Environment"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0-or-later"
depends="atk cairo fontconfig freetype gdk-pixbuf glib gtk+2.0 pango libx11
	gpe-conf libgpelaunch libgpewidget libxsettings-client"
makedepends="cairo-dev
	libgpewidget-dev libgpelaunch-dev libxsettings-dev libxsettings-client"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
	01-cairo-fixes.patch
	02-link-libx11.patch
	03-no-render-h.patch"
builddir="$srcdir/$pkgname-$pkgver"
build() {
	cd "$builddir"
	make
}
package() {
	cd "$builddir"
	make PREFIX="/usr" DESTDIR="$pkgdir" install
}
