# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=libhandoff
pkgver=0.1
pkgrel=5
pkgdesc="Handoff library for GPE"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL 2.0"
depends="glib"
makedepends="glib-dev"
subpackages="$pkgname-dev"
source="http://http.debian.net/debian/pool/main/libh/${pkgname}/${pkgname}_${pkgver}.orig.tar.bz2
	01-add-gobject-linkage.patch
	02-config-sub.patch
	03-install-sh.patch"
builddir="${srcdir}/${pkgname}-${pkgver}"
options="!check"
build () {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
