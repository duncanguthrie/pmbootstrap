# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=gpe-screenshot
pkgver=0.4
pkgrel=0
pkgdesc="Screenshot application for the GPE Palmtop Environment"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0"
depends="gdk-pixbuf libglade glib gtk+2.0 libx11"
makedepends="autoconf automake gtk+2.0-dev glib-dev libgpewidget-dev perl-xml-parser libglade-dev"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
	01-add-x11-linkage.patch
	02-desktop.patch"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
