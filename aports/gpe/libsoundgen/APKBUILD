# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=libsoundgen
pkgver=0.6
pkgrel=0
pkgdesc="GPE Palmtop Environment sound generator library"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="LGPL-2.0-or-later"
depends="esound glib"
makedepends="esound-dev glib-dev intltool"
subpackages="$pkgname-dev"
source="http://http.debian.net/debian/pool/main/libs/${pkgname}/${pkgname}_${pkgver}.orig.tar.bz2
	01-install-sh.patch
	02-missing-linkages.patch"
options="!check"	
builddir="${srcdir}/${pkgname}-${pkgver}"
prepare() {
	default_prepare
	update_config_sub
}
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}
package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
