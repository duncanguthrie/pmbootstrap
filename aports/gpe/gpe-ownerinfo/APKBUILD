# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=gpe-ownerinfo
pkgver=0.28
pkgrel=3
pkgdesc="GPE Palmtop Environment owner details"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0-or-later"
depends="gdk-pixbuf glib gtk+2.0 libx11
	libgpewidget"
makedepends="glib-dev
	libgpewidget-dev"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
	01-add-x11-linkage.patch"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
subpackages="$pkgname-dev $pkgname-lang"

dev () {
        cd "$builddir"
        mkdir -p "$subpkgdir"/usr/lib
        make PREFIX="/usr" DESTDIR="$subpkgdir" install-devel
}
build () {
	cd "$builddir"
	make
}
package() {
	cd "$builddir"
	make PREFIX="/usr" DESTDIR="$pkgdir" install
}
