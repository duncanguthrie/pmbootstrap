# Contributor: Duncan Guthrie <dguthrie@posteo.net>
# Maintainer: Duncan Guthrie <dguthrie@posteo.net>
pkgname=gpe-edit
pkgver=0.41
pkgrel=0
pkgdesc="Text editor for the GPE Palmtop Environment"
url="https://wiki.postmarketos.org/wiki/GPE"
arch="all"
license="GPL-2.0-or-later"
depends="atk cairo fontconfig freetype gdk-pixbuf gtk+2.0 pango 
	gpe-icons libgpewidget"
makedepends="gettext gtk+2.0-dev intltool
	libdisplaymigration-dev libgpewidget-dev"
source="http://http.debian.net/debian/pool/main/g/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
subpackages="$pkgname-doc $pkgname-lang"
prepare() {
	default_prepare
	update_config_sub
}
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}
package() {
	cd "$builddir"
	make PREFIX="/usr" DESTDIR="$pkgdir" install
}
sha512sums="3ff7ca6e4227769ce5d25bc8d4799f4e25a51a1e77885d3cc88dc4d2f025ab211fd0945506e1626cae7e7d2be888d9661558e3a74312307eeef08debe5d8f698  gpe-edit_0.41.orig.tar.gz"
