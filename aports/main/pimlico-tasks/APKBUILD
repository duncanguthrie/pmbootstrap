url="https://git.gnome.org/browse/tasks"
arch="all"
license="GPL-2.0"
depends="gnome-common gtk+3.0 evolution-data-server"
makedepends="gtk+3.0-dev evolution-data-server-dev"
subpackages="$pkgname-lang"
source="https://git.gnome.org/browse/$_pkgname/snapshot/$_pkgname-$_commit.tar.xz
	01-modern-evolution-data-server.patch"
builddir="$srcdir/$_pkgname-$_commit"
build() {
	cd "$builddir"
	./autogen.sh
	./configure \
		--enable-compile-warnings=no
	make -j1
}

package() {
	cd "$builddir"
	make PREFIX="/usr" DESTDIR=$pkgdir install
}

